<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="8dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="?actionBarSize">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/backCardView"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/icon"
                app:layout_constraintHorizontal_bias="0.31"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/icon"
                app:layout_constraintVertical_bias="0.32999998">

                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    tools:layout_editor_absoluteX="9dp"
                    tools:layout_editor_absoluteY="21dp"
                    android:contentDescription="@string/item_description" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Konfirmasi Pesanan"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.333" />

            <ImageView
                android:layout_marginTop="2dp"
                android:id="@+id/icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/item_description"
                android:src="@drawable/icon_my_app"
                app:layout_constraintBottom_toBottomOf="@+id/textTitle"
                app:layout_constraintStart_toEndOf="@id/backCardView"
                app:layout_constraintTop_toTopOf="@+id/textTitle"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:contentDescription="@string/item_description"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_name_coffee"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Nama Kopi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cart">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_edit_kopi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Isi nama anda"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_name_coffee">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_alamat"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Isi alamat anda"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_edit_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_sachet"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Isi berapa bungkus anda mau"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_alamat">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_edit_sachet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Isi per bungkus 250 gram"
                android:textColor="@color/teal_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_input_sachet" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_nmr_hp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Isi nomor telepon anda"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quantity">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_edit_nmr_hp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_wa"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Masukkan nomor WA anda"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_nmr_hp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_edit_wa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Pilih Jenis Coffee"
                app:layout_constraintEnd_toEndOf="@+id/text_input_wa"
                app:layout_constraintStart_toStartOf="@+id/text_input_wa"
                app:layout_constraintTop_toBottomOf="@id/text_input_wa"
                android:layout_marginTop="10dp"
                android:id="@+id/text_jenis_coffee" />

           <RadioGroup
               android:id="@+id/rg_pilihan_item"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               app:layout_constraintTop_toBottomOf="@id/text_jenis_coffee"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

            <RadioButton
                android:layout_marginStart="10dp"
                android:id="@+id/rb_bubuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bubuk Kopi" />

               <RadioButton
                   android:layout_marginStart="10dp"
                   android:id="@+id/rb_biji"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Biji Kopi" />

           </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_note"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:counterMaxLength="1000"
                app:counterEnabled="true"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_pilihan_item">

                <com.google.android.material.textfield.TextInputEditText
                    android:hint="catatan untuk penjual"
                    android:id="@+id/edt_note"
                    android:maxLines="5"
                    android:lines="5"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_input_note"
                android:text="Pembayaran"
                android:id="@+id/tvPembayaran"
                app:layout_constraintStart_toStartOf="@id/text_input_note"
                app:layout_constraintEnd_toEndOf="@id/text_input_note"
                android:layout_marginTop="10dp"
                />

            <HorizontalScrollView
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:id="@+id/horizontal_scrool_chip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:layout_constraintTop_toBottomOf="@id/tvPembayaran"
                    app:layout_constraintEnd_toEndOf="@id/tvPembayaran"
                    app:layout_constraintStart_toStartOf="@id/tvPembayaran"
                    android:id="@+id/chip_group">

                    <com.google.android.material.chip.Chip
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        style="@style/customStyleChip"
                        android:text="Tunai"
                        android:textAlignment="center"
                        android:id="@+id/chip_tunai" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="130dp"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        style="@style/customStyleChip"
                        android:text="Non Tunai"
                        android:textAlignment="center"
                        android:id="@+id/chip_non_tunai" />

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_rekening"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:visibility="visible"
                android:enabled="false"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_scrool_chip">

                <com.google.android.material.textfield.TextInputEditText
                    android:hint="Nmr Rekening"
                    android:id="@+id/edt_rekening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Silahkan kirim bukti transfer ke penjual"
                android:textColor="@color/teal_200"
                app:layout_constraintTop_toBottomOf="@id/text_input_rekening"
                app:layout_constraintStart_toStartOf="@id/text_input_rekening"
                app:layout_constraintEnd_toEndOf="@id/text_input_rekening"
                android:id="@+id/catatan_nmr_rekening" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:id="@+id/btn_confirmation"
                android:enabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/catatan_nmr_rekening" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>